<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.istic.mmm.quickdish">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TheCommandActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.ClientActivity" />
        <activity android:name=".activities.UpdateDish" />
        <activity android:name=".activities.ValidateCommand" />
        <activity android:name=".activities.AddDish"></activity>
    </application>

</manifest>